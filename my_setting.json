{
  "title": "Key mapping",
  "rules": [
    {
      "description": "left command map to left control in firefox",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.google.Chrome",
                "org.mozilla.firefox"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "F5 for refreshing in browser",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f5",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "r",
              "modifiers":[
                  "left_command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.google.Chrome",
                "org.mozilla.firefox"
              ]
            }
          ]
        }
      ]
    },
    {
